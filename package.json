{
  "name": "studio-manager",
  "private": true,
  "version": "0.1.0",
  "description": "Internal web-studio management application (Electron + React + TS)",
  "author": "Web Studio",
  "license": "UNLICENSED",
  "main": "dist/main/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && npm run build:main && npm run build:preload && electron .",
    "build": "rimraf dist && npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "esbuild src/main/main.ts --bundle --platform=node --external:electron --outfile=dist/main/main.cjs --format=cjs --sourcemap",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --external:electron --outfile=dist/preload/index.cjs --format=cjs --sourcemap",
    "start": "electron .",
    "lint": "echo \"No linter configured yet\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.0.1",
    "electron": "^32.2.0",
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  }
}
